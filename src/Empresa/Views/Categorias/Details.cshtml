@model Empresa.Models.CategoriaModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>CategoriaModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
</div>


<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Empresas
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categorias in Model.Empresas)
            {
                <tr>
                    <td>@categorias.Empresa.NomeFantasia</td>
                </tr>
            }
        </tbody>
    </table>


</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
